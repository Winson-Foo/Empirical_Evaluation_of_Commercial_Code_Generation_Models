        case 5:
            return REPLICATE_5_BIT_TO_8_TABLE[value];
        case 6:
            return REPLICATE_6_BIT_TO_8_TABLE[value];
        case 7:
            return REPLICATE_7_BIT_TO_8_TABLE[value];
        default:
            break;
        }
    }
    return Replicate(value, num_bits, to_bit);
}

